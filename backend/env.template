# X (Twitter) API Credentials
# Get these from https://developer.twitter.com/
X_BEARER_TOKEN=your_bearer_token_here
X_API_KEY=your_api_key_here
X_API_SECRET=your_api_secret_here
X_ACCESS_TOKEN=your_access_token_here
X_ACCESS_TOKEN_SECRET=your_access_token_secret_here

# Reddit API Credentials
# Get these from https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
REDDIT_USER_AGENT=your_user_agent_here

# Finnhub API Credentials
# Get these from https://finnhub.io/
FINNHUB_API_KEY=your_finnhub_api_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here

# Optional: Database Configuration (if using persistent storage)
# DATABASE_URL=postgresql://user:password@localhost/dbname

# Optional: Redis Configuration (if using Redis for caching)
# REDIS_URL=redis://localhost:6379

# Optional: Logging Configuration
# LOG_LEVEL=INFO
# LOG_FILE=app.log

# CORS configuration
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
