# Stock Sentiment Analyzer - Production Environment Template
# Copy this to .env.production and configure for production deployment

# ===================================
# FLASK CORE CONFIGURATION (PRODUCTION)
# ===================================

# REQUIRED: Generate a secure SECRET_KEY for production
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=GENERATE-A-SECURE-32-PLUS-CHARACTER-SECRET-KEY-HERE

# Production environment settings
FLASK_ENV=production
FLASK_DEBUG=false

# ===================================
# SERVER CONFIGURATION
# ===================================

HOST=0.0.0.0
PORT=5000

# ===================================
# API CONFIGURATION
# ===================================

API_VERSION=v1.0.0
LOG_LEVEL=INFO

# ===================================
# RATE LIMITING
# ===================================

RATELIMIT_ENABLED=true
RATELIMIT_DEFAULT=100 per minute

# ===================================
# CACHE CONFIGURATION
# ===================================

CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# ===================================
# SECURITY CONFIGURATION (PRODUCTION)
# ===================================

# Enable secure cookies for production (HTTPS required)
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict

# REQUIRED: Set your production frontend URL(s)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===================================
# PERFORMANCE CONFIGURATION
# ===================================

MAX_CONTENT_LENGTH=16777216
REQUEST_TIMEOUT=30

# ===================================
# EXTERNAL API KEYS (Recommended for Production)
# ===================================

# Reddit API Configuration
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=StockSentimentBot/1.0

# X (Twitter) API Configuration
X_BEARER_TOKEN=your-x-bearer-token
X_API_KEY=your-x-api-key
X_API_SECRET=your-x-api-secret
X_ACCESS_TOKEN=your-x-access-token
X_ACCESS_TOKEN_SECRET=your-x-access-token-secret

# Finnhub API Configuration
FINNHUB_API_KEY=your-finnhub-api-key

# ===================================
# FEATURE FLAGS
# ===================================

# Disable mock data in production (when real API keys are provided)
MOCK_DATA_ENABLED=false
CACHE_ENABLED=true
RETRY_ENABLED=true
MAX_RETRY_ATTEMPTS=3

# ===================================
# DATABASE CONFIGURATION (Future Use)
# ===================================

DATABASE_URL=
REDIS_URL=

# ===================================
# PRODUCTION DEPLOYMENT CHECKLIST
# ===================================
#
# 1. ✅ Generate secure SECRET_KEY
# 2. ✅ Set FLASK_ENV=production
# 3. ✅ Update CORS_ORIGINS with your domain
# 4. ✅ Enable SESSION_COOKIE_SECURE (requires HTTPS)
# 5. ✅ Add real API keys for live data
# 6. ✅ Set MOCK_DATA_ENABLED=false
# 7. ✅ Test with: python config_enhanced.py validate
# 8. ✅ Deploy with proper HTTPS certificate
#